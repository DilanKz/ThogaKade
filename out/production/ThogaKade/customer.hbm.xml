<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="lk.ijse.thogakade.entity.Customer" table="customer-customID">
        <id name="id" column="customerId">
            <generator class="lk.ijse.thogakade.ids.CustomerIDGenerator"/>
        </id>
        <property name="name" column="customerName"></property>
        <property name="address" column="customerAddress"/>
        <property name="salary" column="customerSalary"/>
    </class>
</hibernate-mapping>